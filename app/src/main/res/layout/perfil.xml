<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/index"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:padding="50dp"
        android:text="PERFIL"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bottom_itinerario_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/text_1_perfil"
        android:onClick="continueSchedule"/>

    <Button
        android:id="@+id/bottom_compras_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/text_2_perfil"
        android:onClick="continueBuy"/>

    <Button
        android:id="@+id/bottom_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/text_3_perfil"
        android:onClick="logout"/>

</LinearLayout>